{% extends 'base.html.twig' %}

{% block title %}Liste des Reinscriptions{% endblock %}
{% block titrePage %}Gestion des reinscriptions{% endblock %}
{% block cardHeader %} {{ block ('title')}} {% endblock %}
{% block body %}
        <table class="table table-hover table-striped  table-bordered" id="dataTable" width="100%" cellspacing="0">        <thead>
        <thead>
            <tr>
                <th>#</th>
                <th>Etudiant</th>
                <th>Matricule </th>
                <th>Promotion</th>
                <th>Année </th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
           <tr>
                <th>#</th>
                <th>Etudiant</th>
                <th>Matricule </th>
                <th>Promotion</th>
                <th>Année </th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for reinscription in reinscriptions %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ reinscription.etudiantAnneeAcademique|upper }}</td>
                <td>{{ reinscription.etudiantAnneeAcademique.matricule }}</td>
                <td>{{ reinscription.etudiantAnneeAcademique.promotionActuelle }}</td>
                <td>{{ reinscription.etudiantAnneeAcademique.promotionActuelle.anneeAcademique }}</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-primary btn-sm" href="{{ path('app_reinscription_show', {'id': reinscription.id}) }}"><span class="fa fa-search-plus"> </span> recu</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_reinscription_edit', {'id': reinscription.id}) }}"> <span class="fa fa-edit"> </span> edit</a>
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
