{% extends 'base.html.twig' %}

{% block title %}Liste des années académiques {% endblock %}
{% block titrePage %}Gestion des configurations  {% endblock %}
{% block cardHeader %} {{ block ('title')}} {% endblock %}

{% block body %}
        <table class="table table-hover table-striped  table-bordered" id="dataTable" width="100%" cellspacing="0">        <thead>
        <thead>
            <tr>
                <th>#</th>
                <th>Année academique </th>
                <th>Total Perceptions </th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Année academique </th>
                <th>Total Perceptions </th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for annee_academique in annee_academiques %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ annee_academique }}</td>
                <td>{{ annee_academique.grandTotalFrais}}</td>
                <td>
                    <div class="btn-group">
                    <a class="btn btn-primary btn-sm" href="{{ path('app_annee_academique_show', {'id': annee_academique.id}) }}">show</a>
                    <a class="btn btn-sm btn-secondary" href="{{ path('app_annee_academique_edit', {'id': annee_academique.id}) }}">edit</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_annee_academique_edit', {'id': annee_academique.id}) }}">promotions</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('app_annee_academique_edit', {'id': annee_academique.id}) }}">reinscriptions</a>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_annee_academique_edit', {'id': annee_academique.id}) }}">frais</a>
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary "  href="{{ path('app_annee_academique_new') }}">Créer nouvelle année academique</a>
{% endblock %}
