{% extends 'base.html.twig' %}

{% block title %}FListe des frets abstraits  {% endblock %}
{% block titrePage %}Gestion de configuration  {% endblock %}
{% block cardHeader %} {{ block ('title')}} {% endblock %}
{% block body %}
        <table class="table table-hover table-striped  table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>#</th>
                <th>Designation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Designation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for frais_abstrait in frais_abstraits %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ frais_abstrait.designation }}</td>
                <td>{{ frais_abstrait.description }}</td>
                <td>
                    <a href="{{ path('app_frais_abstrait_show', {'id': frais_abstrait.id}) }}">show</a>
                    <a href="{{ path('app_frais_abstrait_edit', {'id': frais_abstrait.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_frais_abstrait_new') }}">Create new</a>
{% endblock %}
