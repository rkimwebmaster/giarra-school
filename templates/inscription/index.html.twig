{% extends 'base.html.twig' %}

{% block title %}Liste des Inscriptions{% endblock %}
{% block titrePage %}Gestion des inscriptions{% endblock %}
{% block cardHeader %} {{ block ('title')}} {% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Etudiant</th>
                <th>Matricule </th>
                <th>Promotion</th>
                <th>Année </th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Etudiant</th>
                <th>Matricule </th>
                <th>Promotion</th>
                <th>Année </th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ inscription.etudiantAnneeAcademique|upper}}</td>
                <td>{{ inscription.etudiantAnneeAcademique.matricule|upper}}</td>
                <td>{{ inscription.etudiantAnneeAcademique.promotionActuelle }}</td>
                <td>{{ inscription.promotionConcrete.anneeAcademique }}</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-sm btn-primary" href="{{ path('app_inscription_show', {'id': inscription.id}) }}">show</a>
                    <a class="btn btn-sm btn-secondary" href="{{ path('app_inscription_edit', {'id': inscription.id}) }}">edit</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_reinscription_new', {'id': inscription.id}) }}">reinscrire</a>
                    <a title="payer frais"  class="btn btn-sm btn-danger" href="{{ path('app_reinscription_new', {'id': inscription.id}) }}">payer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_inscription_new') }}">Create new</a>
{% endblock %}
