{% extends 'base.html.twig' %}

{% block title %}Toutes les sections
{% endblock %}
{% block titrePage %}Gestion des sections
{% endblock %}
{% block cardHeader %}Liste des sections
{% endblock %}

{% block body %}
        <table class="table table-hover table-striped  table-bordered" id="dataTable" width="100%" cellspacing="0">        <thead>
		<thead>
			<tr>
				<th>#</th>
				<th>Designation</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<th>#</th>
				<th>Designation</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</tfoot>
		<tbody>
			{% for faculte_section in faculte_sections %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ faculte_section.designation }}</td>
					<td>{{ faculte_section.text }}</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-primary btn-sm" href="{{ path('app_faculte_section_show', {'id': faculte_section.id}) }}">show</a>
							<a class="btn btn-secondary btn-sm" href="{{ path('app_faculte_section_edit', {'id': faculte_section.id}) }}">edit</a>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary " href="{{ path('app_faculte_section_new') }}">Cr√©er nouvelle section
	</a>
{% endblock %}
