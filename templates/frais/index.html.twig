{% extends 'base.html.twig' %}

{% block title %}Liste des frais {% endblock %}
{% block titrePage %}Gestion des frais {% endblock %}
{% block cardHeader %} {{ block ('title')}} {% endblock %}
{% block body %}
        <table class="table table-hover table-striped  table-bordered" id="dataTable" width="100%" cellspacing="0">        <thead>
            <tr>
                <th>#</th>
                <th>Designation</th>
                <th>Description</th>
                <th>DateButoire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Designation</th>
                <th>Description</th>
                <th>DateButoire</th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for frai in frais %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ frai.fraisAbstrait.designation }}</td>
                <td>{{ frai.fraisAbstrait.description }}</td>
                <td>{{ frai.dateButoire ? frai.dateButoire|format_date('long') : '' }}</td>
                <td>
                    <a href="{{ path('app_frais_show', {'id': frai.id}) }}">show</a>
                    <a href="{{ path('app_frais_edit', {'id': frai.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_frais_new') }}">Create new</a>
{% endblock %}
