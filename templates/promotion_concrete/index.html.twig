{% extends 'base.html.twig' %}

{% block title %}Liste des classes courantes {% endblock %}
{% block titrePage %}Gestion des classes  {% endblock %}
{% block cardHeader %} {{ block ('title')}} {% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Promotion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>promotion</th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for promotion_concrete in promotion_concretes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ promotion_concrete }} - <span class="badge badge-info">{{ (promotion_concrete.etudiantAnneeAcademiques|length) }} étudiant(s) </span> </td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-primary btn-sm" href="{{ path('app_promotion_concrete_show', {'id': promotion_concrete.id}) }}">show</a>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_promotion_concrete_edit', {'id': promotion_concrete.id}) }}">edit</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('app_promotion_concrete_edit', {'id': promotion_concrete.id}) }}">inscriptions</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('app_promotion_concrete_edit', {'id': promotion_concrete.id}) }}">reinscriptions</a>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_promotion_concrete_edit', {'id': promotion_concrete.id}) }}">tous les élèves </a>
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_promotion_concrete_new') }}">Créer nouvelle promotion</a>
{% endblock %}
